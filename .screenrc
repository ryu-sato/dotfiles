###############################################################################
### .screenrc
################################################################################

defencoding	utf8
encoding	utf8 utf8
hardstatus	alwayslastline "[%Y/%m/%d(%D)%c] %w"
hardstatus	on
autodetach	on
startup_message	off
escape		^t^t
defscrollback	100000
vbell		off
termcapinfo xterm 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'
